{
  "manifest_version": 3,
  "name": "BrieflyAI",
  "version": "1.0",
  "description": "AI-powered text summarization extension",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "48": "icon.png"
  }
}